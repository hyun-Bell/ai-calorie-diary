{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸš€ Start Development Server",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "start:dev"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
      },
      "options": {
        "cwd": "${workspaceFolder}/ai-calorie-diary"
      },
      "problemMatcher": "$tsc-watch",
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "ğŸ§ª Run Unit Tests",
      "type": "shell",
      "command": "pnpm",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/ai-calorie-diary"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "ğŸ”¬ Run E2E Tests",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "test:e2e"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/ai-calorie-diary"
      },
      "dependsOn": "ğŸ—„ï¸ Prisma Deploy Migration"
    },
    {
      "label": "ğŸ¯ Run Food Tests",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "test:food"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/ai-calorie-diary"
      }
    },
    {
      "label": "ğŸ”§ Prisma Generate",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "generate"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/ai-calorie-diary"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸ—„ï¸ Prisma Deploy Migration",
      "type": "shell",
      "command": "npx",
      "args": ["prisma", "migrate", "deploy"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/ai-calorie-diary"
      },
      "dependsOn": "ğŸ”§ Prisma Generate"
    },
    {
      "label": "ğŸ—ï¸ Build Project",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/ai-calorie-diary"
      },
      "problemMatcher": "$tsc",
      "dependsOn": "ğŸ”§ Prisma Generate"
    },
    {
      "label": "ğŸ¨ Format Code",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "format"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/ai-calorie-diary"
      }
    },
    {
      "label": "ğŸ” Lint Code",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "lint"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/ai-calorie-diary"
      },
      "problemMatcher": "$eslint-stylish"
    },
    {
      "label": "ğŸ§¹ Clean & Install",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "node_modules", "dist", "&&", "pnpm", "install"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/ai-calorie-diary"
      }
    },
    {
      "label": "ğŸ³ Docker Compose Up",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "-d"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/ai-calorie-diary"
      }
    },
    {
      "label": "ğŸ›‘ Docker Compose Down",
      "type": "shell",
      "command": "docker-compose",
      "args": ["down"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/ai-calorie-diary"
      }
    },
    {
      "label": "ğŸ“Š View Logs",
      "type": "shell",
      "command": "tail",
      "args": ["-f", "logs/app.log"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}/ai-calorie-diary"
      },
      "isBackground": true
    },
    {
      "label": "ğŸ”„ Full Reset & Start",
      "dependsOrder": "sequence",
      "dependsOn": [
        "ğŸ§¹ Clean & Install",
        "ğŸ”§ Prisma Generate",
        "ğŸ—„ï¸ Prisma Deploy Migration",
        "ğŸš€ Start Development Server"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
} 